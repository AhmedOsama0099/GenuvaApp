<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundapp"
    tools:context=".Sigin_UP">

    <TextView
        android:id="@+id/title_App"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="Genuva App"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="13dp"
        android:textColor="@color/title_app"
        android:textSize="48dp"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/email_SiginUP"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/title_App"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="52dp"
        android:layout_marginRight="19dp"
        android:background="#fff"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_mail"
        android:paddingStart="9dp"
        android:hint="Email"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/password_sigin_UP"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/email_SiginUP"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="19dp"
        android:background="#fff"
        android:maxLength="10"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock"
        android:paddingStart="9dp"
        android:hint="Password"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Re_password_sigin_UP"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:layout_below="@id/password_sigin_UP"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="19dp"
        android:background="#fff"
        android:maxLength="10"
        android:drawableLeft="@drawable/ic_lock"
        android:paddingStart="9dp"
        android:hint="Re_ Password"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_sign_UP"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/Re_password_sigin_UP"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/button"
        android:paddingStart="9dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/title_app"
        android:textSize="25dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/text_already_have_Account"
        android:layout_below="@id/btn_sign_UP"
        android:layout_marginTop="10dp"
        android:text="Already have an Account !"
        android:textColor="#072096"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:gravity="center"/>

</RelativeLayout>